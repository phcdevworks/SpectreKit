# Normalize all text files to LF line endings
* text=auto eol=lf

# Explicit line-ending rules for common file types
*.js     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.jsx    text eol=lf
*.astro  text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.xml    text eol=lf
*.sh     text eol=lf
*.env    text eol=lf

# Prevent text normalization on binaries
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.svg    text
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary
*.pdf    binary
*.ico    binary
*.zip    binary

# Lock formatting for lockfiles
package-lock.json text eol=lf
pnpm-lock.yaml    text eol=lf
yarn.lock         text eol=lf

# Protect shell scripts and executable tools from permission loss
*.sh      text eol=lf
*.sh      diff
*.sh      eol=lf
