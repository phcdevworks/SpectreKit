---
export interface Props {
  class?: string;
  padding?: boolean;
  shadow?: boolean;
  rounded?: boolean;
}

const { class: customClass = '', padding = true, shadow = true, rounded = true } = Astro.props;

const baseClasses = [
  'bg-white',
  padding ? 'p-6' : '',
  shadow ? 'shadow-md' : '',
  rounded ? 'rounded-2xl' : '',
  customClass
]
  .filter(Boolean)
  .join(' ');
---

<div class={baseClasses}>
  <slot />
</div>
